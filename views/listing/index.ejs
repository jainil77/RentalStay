<%- include("../partials/_header") %>
<main class="flex-grow-1 container my-4">
<%= success %>
<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% for (let listing of allListings) { %>
          
    <a class="listing-link text-decoration-none text-dark"  href="/listings/<%= listing._id %>">
      <div class="card listing-card h-100">
        <img 
          src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>" 
          class="card-img-top" 
          style="height: 19rem; object-fit: cover;" 
          alt="Listing Image"
        >
        <div class="card-body">   
          <p class="card-text">
            <b><%= listing.title || 'Untitled Listing' %></b><br>
            &#8377; 
            <%= listing.price != null ? listing.price.toLocaleString("en-IN") : 'Not Available' %> 
            / night
          </p>
        </div>
      </div>
    </a>
  <% } %>                          
</div>
</main>
<%- include("../partials/_footer") %>